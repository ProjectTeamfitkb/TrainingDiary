<Window x:Class="Training.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:language ="clr-namespace:Training.Langs"
        Title="Training Diary" Height="774" Width="1366">
    
    <Grid RenderTransformOrigin="0.701,0.647">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/1.jpg"/>
        </Grid.Background>
        <Grid Margin="31,198,830,51.8">

            <Button x:Name="But_TrD" Content="{x:Static language:Lang.dt_lan}" BorderBrush="#FFC10A0B" FontSize="64" FontFamily="SIEMENS_GOST Type A" Background="#FFC0090A" Margin="0,0,0,364" Click="But_TrD_Click" />
            <Button x:Name="But_Chr" Content="{x:Static language:Lang.ch_lan}" BorderBrush="#FFC10A0B" FontSize="64" FontFamily="SIEMENS_GOST Type A" Background="#FFC0090A" Margin="0,183,0,175" Click="But_Chr_Click" />

            <Button x:Name="But_Cal" Content="{x:Static language:Lang.cal_lan}" Background="#FFBF0809" BorderBrush="#FFBE0708" FontSize="64" FontFamily="SIEMENS_GOST Type A" Margin="0,364,0,0" Click="But_Cal_Click" />
        </Grid>
        <Label x:Name="Text2" HorizontalAlignment="Center" Height="135" Margin="474,37,444,0" Content="{x:Static language:Lang.tr_lan}" VerticalAlignment="Top" Width="442" Background="#FFE80405" FontSize="96" FontFamily="SIEMENS_GOST Type A" />
        <Grid Margin="568,198,19,28.8">
