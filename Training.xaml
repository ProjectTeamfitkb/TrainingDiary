        </Grid>
        <ComboBox Name="cmd" HorizontalAlignment="Left" Margin="6,37,0,0" VerticalAlignment="Top" Width="120" BorderBrush="#FFE61112" SelectionChanged="ComboBox_SelectionChanged_1" Background="#FFF90C0C">
            <ComboBox.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FFE80405" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.OpacityMask>
            <ComboBoxItem Content="{x:Static language:Lang.ru}" Height="20" Width="100" Background="#00000000"/>
            <ComboBoxItem Content="{x:Static language:Lang.en}" Height="20" Width="100"/>
        </ComboBox>
    </Grid>
</Window>
